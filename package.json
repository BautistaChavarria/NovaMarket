{
  "name": "novamarket",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
  "dev": "concurrently -k \"npm run dev-frontend\" \"npm run dev-backend\"",
  "dev-frontend": "npm --workspace frontend run dev",
  "dev-backend": "npm --workspace backend run dev",
  "build": "npm --workspace frontend run build",
  "start": "npm --workspace backend run start",
  "setup": "npm --workspace backend install && npm --workspace frontend install"
},

  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}